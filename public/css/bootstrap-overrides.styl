.btn-primary
  background-color accentColor
  border-color darken(accentColor, 10%)
  &:hover, &:focus
    background-color lighten(accentColor, 10%)
    border-color accentColor
.btn-primary[disabled]
  background-color lighten(accentColor, 20%)
  border-color lighten(accentColor, 10%)

a
  color accentColor
  &:hover, &:focus
    color lighten(accentColor, 10%)

.nav-pills
  > li
    &.active
      a
        background-color accentColor
        &:hover, &:focus
          background-color lighten(accentColor, 10%)
