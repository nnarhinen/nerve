@import "variables"
@import "bootstrap-overrides"

.route-container
  float left
  box-sizing border-box
  -moz-box-sizing border-box
  padding 10px
  width calc(100% - 315px)
.horizontal-spacer
  float left
  width 310px
  height 1px
.vertical-spacer
  height 60px

.navmenu.navmenu-default.navmenu-fixed-left.offcanvas-sm.show
  padding-top 60px

.app-loading
  width 100%
  padding-top 40%
  text-align center
  color mainColor

.navbar-default
  .navbar-brand
    color mainColor
    font-family 'Rock Salt', cursive
  .navbar-toggle
    border-color accentColor
    color accentColor
    .icon-bar
      background-color accentColor

.navmenu-default

  .account-info
    position absolute
    bottom 0px
    background-color mainColor
    left 0px
    right 0px
    padding 10px
    color #ddd
    a
      color #fff
      font-weight bold
      &:hover, &:focus
        color darken(#fff, 10%)

  .navmenu-brand
    color mainColor
    font-family 'Rock Salt', cursive

  .navmenu-nav
    > li
      > a:hover
        color mainColor
    > .active
      > a
        background-color mainColor
        color #fff
        &:hover
          background-color lighten(mainColor, 10%)
          color #fff


.notification-area
  position fixed
  right 10px
  top 10px
  width 200px

@media (max-width: 990px)
  .route-container
    width 100%
